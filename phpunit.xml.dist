<?xml version="1.0" encoding="UTF-8"?>
<phpunit bootstrap="tests/bootstrap.php" colors="true">
    <testsuites>
        <testsuite name="Greebo Mustache Test Suite">
            <directory>tests/Greebo/</directory>
        </testsuite>
    </testsuites>

    <filter>
        <whitelist>
            <directory suffix=".php">src/Greebo/</directory>
        </whitelist>
    </filter>

	<groups>
		<exclude>
			<group>pragma</group>
		</exclude>
	</groups>
</phpunit>
